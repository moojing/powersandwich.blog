---
export interface Props {
  href: string;
  target?: "_blank" | "_self";
  variant?: "outline" | "inverted";
  class?: string;
  onclick?: string;
}

const { href, target = "_blank", variant = "outline", class: className = "", onclick } = Astro.props;

const baseClasses = "px-4 py-2 text-sm transition-colors duration-200 text-center";
const variantClasses = {
  outline: "border border-white text-white hover:bg-white hover:text-neutral-900",
  inverted: "bg-white text-neutral-900 border border-white hover:bg-white border-white",
};
---

<a href={href} target={target} class={`${baseClasses} ${variantClasses[variant]} ${className}`} onclick={onclick}>
  <div class="flex gap-2 items-center justify-center">
    <slot />
  </div>
</a>
